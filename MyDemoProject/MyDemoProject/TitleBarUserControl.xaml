<UserControl x:Class="MyDemoProject.TitleBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDemoProject"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="#01FFE4C4">
		<TextBlock Text="TITLE HERE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
		<StackPanel HorizontalAlignment="Right" Width="150" Orientation="Horizontal">
			<Button x:Name="MinimizeButton" Width="50" Height="50" Click="MinimizeButton_Click">

			</Button>
			<Button x:Name="MaximizeButton" Width="50" Height="50" Click="MaximizeButton_Click">

			</Button>
			<Button x:Name="CloseButton" Width="50" Height="50" Click="CloseButton_Click">

			</Button>
		</StackPanel>
	</Grid>
</UserControl>
