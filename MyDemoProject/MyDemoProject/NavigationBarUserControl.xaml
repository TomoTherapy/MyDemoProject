<UserControl x:Class="MyDemoProject.NavigationBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyDemoProject"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Background="AliceBlue">
		<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
			<Button Width="50" Height="50" Click="Button_Click_1">
				<TextBlock Text="1"/>
			</Button>
			<Button Width="50" Height="50" Click="Button_Click_2">
				<TextBlock Text="2"/>
			</Button>
			<Button Width="50" Height="50" Click="Button_Click_3">
				<TextBlock Text="3"/>
			</Button>
			<Button Width="50" Height="50" Click="Button_Click_4">
				<TextBlock Text="4"/>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
